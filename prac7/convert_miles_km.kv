BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_input
            text: ''
            font_size: 70
            on_text: app.handle_convert(miles_input.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_up_down(miles_input.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_up_down(miles_input.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_convert(miles_input.text)
    Label:
        id: km_output
        text: app.message
        font_size: 40
        color: (1, 1, 0, 1)
