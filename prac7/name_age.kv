BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            id: new_widgets_box
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Create widgets'
                color: (0, 1, 0, 1)
                on_press: app.create_widgets()
            Button:
                text: 'Clear widgets'
                color: (1, 0, 0, 1)
                on_press: app.clear_widgets()
    Label:
        text: app.status_output
        size_hint_y: 0.1
        color: (1, 1, 0, 1)

