BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Convert\nCelsius to Fahrenheit'
            id: c_to_f
            on_press: app.show_temp(1, temp_input.text)
        Button:
            text: 'Convert\nFahrenheit to Celsius'
            id: f_to_c
            on_press: app.show_temp(0, temp_input.text)
    BoxLayout:
        orientation: 'horizontal'
        id: input_box
        TextInput:
            text: ''
            id: temp_input
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_up_down(temp_input.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_up_down(temp_input.text, -1)
    Label:
        text: app.temp_message
        id: temp_convert
        color: (1, 1, 0, 1)